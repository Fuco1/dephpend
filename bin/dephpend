#!/usr/bin/env php
<?php declare(strict_types=1);

use Mihaeu\PhpDependencies\Cli\Application;
use Mihaeu\PhpDependencies\Util\DI;

// we need to get this before anything else is loaded
$internals = array_merge(
    get_declared_classes(),
    get_declared_interfaces(),
    get_declared_traits()
);

require __DIR__.'/../vendor/autoload.php';

ini_set('xdebug.max_nesting_level', '3000');

$name = <<<EOT
      _      _____  _    _ _____               _ 
     | |    |  __ \| |  | |  __ \             | |
   __| | ___| |__) | |__| | |__) |__ _ __   __| |
  / _` |/ _ \  ___/|  __  |  ___/ _ \ '_ \ / _` |
 | (_| |  __/ |    | |  | | |  |  __/ | | | (_| |
  \__,_|\___|_|    |_|  |_|_|   \___|_| |_|\__,_|
EOT;

$application = new Application($name, '0.2', new DI($internals), $argv);
$application->run();
